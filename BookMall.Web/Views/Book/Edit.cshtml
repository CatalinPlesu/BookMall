@model BookMall.Web.Models.Book

<div class="container my-4">
    <div class="card border-primary">
        <div class="card-body">
            <h3 class="card-title">
                @Model.Title
            </h3>
            <h6 class="card-subtitle">
                @Model.Author
            </h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center">
                        <img src="@Model.ImageUrl" class="img-responsive" width="100%">
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">
                        @Model.Title
                        @ViewBag.id
                    </h4>
                    <div>
                        @Model.Description
                    </div>
                    <h2 class="mt-5">
                        $
                        @Model.Price
                    </h2>
                    @if (ViewBag.UserLevel != "Admin" && ViewBag.UserLevel != "Moderator")
                    {
                        <button class="btn btn-dark btn-rounded">Add to Cart</button>

                        <button class="btn btn-primary btn-rounded">Buy Now</button>
                    }


                    <button class="btn btn-info btn-rounded">Download</button>
                    @if (ViewBag.UserLevel == "Admin" || ViewBag.UserLevel == "Moderator")
                    {
                        <a href="/book/edit/@ViewBag.id">
                            <button class="btn btn-warning btn-rounded">Edit</button>
                        </a>
                    }
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td>Title</td>
                                    <td>
                                        @Model.Title
                                    </td>
                                </tr>
                                <tr>
                                    <td>Category</td>
                                    <td>
                                        @Model.Genre
                                    </td>
                                </tr>
                                <tr>
                                    <td>Author</td>
                                    <td>
                                        @Model.Author
                                    </td>
                                </tr>
                                <tr>
                                    <td>Page number</td>
                                    <td>
                                        @Model.Pages
                                    </td>
                                </tr>
                                <tr>
                                    <td>ISBN</td>
                                    <td>
                                        @Model.ISBN
                                    </td>
                                </tr>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
