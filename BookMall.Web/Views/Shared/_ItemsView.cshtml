<section>

    <div class="container py-5">
        <p class="mx-5">
            @Html.Partial("_Categories")
        </p>
        <div class="row">
            @Html.Partial("_Pagination")
        </div>
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-lg-2 col-md-3 col-6">
                    <div class="card border-primary mb-3 text-center">
                        <div class="card-footer text-muted">
                            <img src="@Url.Content(book.ImageUrl)"
                                 class="card-img-top img-thumbnail" alt="Book" />
                            <smalla>
                                <p class="item_text">
                                    @book.Title : @book.Author
                                </p>
                            </smalla>
                            <p>@book.Price $</p>
                            <a href="/book/display/@book.Id" class="text-dark stretched-link text-decoration-none"> </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            @Html.Partial("_Pagination")
        </div>
    </div>
</section>